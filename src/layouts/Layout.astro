---
interface Props {
    title: string;
}

import "$lib/styles/app.css";

import PostHog from "../components/posthog.astro";

import { SEOMetadata } from "astro-seo-metadata";

const { title } = Astro.props;

import { Image } from "astro:assets";

import brandmark from "/src/images/brandmark.png";

import meta_image from "/src/images/meta-image.jpg";
import favicon from "/src/images/favicon.png";

import "@fontsource-variable/plus-jakarta-sans";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <SEOMetadata
            siteName={"Rectangle Services"}
            title={title}
            description={"Full-stack, senior product design services for independent developers, founders and SaaS companies."}
            image={meta_image.src}
            favicon={favicon.src}
            author="Charlie Coppinger"
            copyright="Â© 2025 Charlie Coppinger. All rights reserved."
            astroSitemap={true}
            canonicalUrl={Astro.url.toString()}
            type={"website"}
            astroGenerator={true}
        />
        <PostHog />
    </head>
    <body class="bg-neutral-50">
        <div
            class="hidden md:flex bg-white h-14 border-b border-dashed border-neutral-300"
        >
            <!-- Top bar -->
            <div
                class="max-w-screen-xl w-full flex items-center justify-between mx-auto p-5"
            >
                <a href="/">Rectangle Services</a>
                <div class="flex items-center gap-10">
                    <a class="underline" href="/#services">Services</a>
                    <a class="underline" href="/#faq">FAQ</a>
                    <!-- TODO: add a booking page link with an embeded cal.com widget -->
                    <a class="underline" href="/book-a-call"
                        >Book a call -&gt;</a
                    >
                </div>
            </div>
        </div>
        <main
            class="max-w-screen-xl p-5 md:py-20 relative grid grid-cols-3 md:grid-cols-8 gap-20 md:gap-y-20 md:gap-x-0 md:mx-auto md:w-full"
        >
            <div
                class="col-span-3 md:col-span-8 grid md:grid-cols-8 grid-cols-3"
            >
                <a href="/">
                    <Image
                        src={brandmark}
                        alt="Brandmark"
                        loading={"eager"}
                        class="col-span-1"
                    /></a
                >
            </div>
            <slot />
            <div
                class="max-w-screen-xl fixed -z-10 top-0 w-full px-5 h-screen border-dashed border-neutral-300 grid grid-cols-3 md:grid-cols-8 left-1/2 transform -translate-x-1/2"
            >
                <div
                    class="grid-cols-1 border-l border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="grid-cols-1 border-l border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="grid-cols-1 border-x md:border-l md:border-r-0 border-dashed border-neutral-300 h-full"
                >
                </div>
                <!-- extra 5 columns bigger viewports -->
                <div
                    class="hidden md:block grid-cols-1 border-l border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="hidden md:block grid-cols-1 border-l border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="hidden md:block grid-cols-1 border-x border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="hidden md:block grid-cols-1 border-r border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="hidden md:block grid-cols-1 border-r border-dashed border-neutral-300 h-full"
                >
                </div>
            </div>
        </main>
        <footer class="flex flex-col gap-10 col-span-3 py-20 items-center p-5">
            <Image src={brandmark} alt="Brandmark" width={155} />
            <a
                href="https://twitter.com/thecoppinger"
                target="_blank"
                aria-label="@TheCoppinger on Twitter"
                class="hover:rotate-180
                transition-all
                ease-linear
                duration-150
                delay-100"
            >
                <svg
                    width="33"
                    height="27"
                    viewBox="0 0 33 27"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <g clip-path="url(#clip0_45_20228)">
                        <path
