                            fill="#55ACEE"></path>
                        <path
                            d="M21.5 21C22.2293 20.3206 22.9784 19.6611 23.7131 18.9869C23.8482 18.8629 24.2485 18.5064 24.3935 18.3072C24.5378 18.1088 24.4074 18.2012 24.5 18"
                            stroke="white"
                            stroke-linecap="round"></path>
                        <path
                            d="M21.5 18C22.4265 18.7927 23.2374 19.7471 24.0767 20.6658C24.1643 20.7616 24.2744 20.8961 24.3885 20.9678C24.5054 21.0413 24.4414 20.9703 24.5 20.9389"
                            stroke="white"
                            stroke-linecap="round"></path>
                    </g>
                    <defs>
                        <clipPath id="clip0_45_20228">
                            <rect
                                width="32"
                                height="26.3784"
                                fill="white"
                                transform="matrix(1 0 0 -1 0.5 26.3784)"></rect>
                        </clipPath>
                    </defs>
                </svg>
            </a>
            <p class="text-center">
                Made with love, <a
                    href="https://twitch.tv/thecoppinger"
                    target="_blank"
                    class="underline underline-offset-4">live on Twitch</a
                >, from Wellington, New Zealand
            </p>
        </footer>
        <div
            class="hidden md:block bg-white h-14 border-t border-dashed border-neutral-300"
        >
        </div>
    </body>
</html>
